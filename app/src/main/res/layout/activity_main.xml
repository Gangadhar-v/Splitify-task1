<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:scaleType="centerInside"
            android:backgroundTint="@color/white"
            android:src="@drawable/img"
            android:contentDescription="animated icon"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/menu"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/white"
            android:contentDescription="menu btn"
            android:layout_marginLeft="285dp"
            android:layout_marginTop="10dp"/>
            
    </LinearLayout>
    
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Monthly expenses tracker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:layout_marginTop="10dp"/>
    
    <LinearLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="200dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This Month"
                    android:textSize="25sp"
                    android:textStyle="normal"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:textColor="#807B7B"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textSize="50dp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLength="3"
                    android:layout_gravity="center"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="200dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp"
            android:layout_gravity="center"
            android:layout_margin="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Past Price"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/spent_info"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spent by :"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gangadhar : 500"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/blue"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spent_info"
        android:layout_marginTop="80dp">

        <androidx.cardview.widget.CardView
            android:layout_width="230dp"
            android:layout_height="58dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="25dp"
            android:padding="10dp"
            android:layout_marginStart="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Expense"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                />

        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:icon="@drawable/add"
            android:backgroundTint="@color/white"
            android:contentDescription="add icon"
            android:layout_marginLeft="80dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>